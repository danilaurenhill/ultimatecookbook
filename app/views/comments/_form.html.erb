<%= form_for(@comment) do |f| %>
  <% if @comment.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@comment.errors.count, "error") %></h2>

      <ul>
      <% @comment.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= f.label :recipe_name %><br>
    <%= f.text_field :user_name %>
  </div>
  <div class="field">
    <%= f.label :Ingredients %><br>
    <%= f.text_area :body %>
  </div>
  <div class="field">
    <%= f.label :Directions %><br>
    <%= f.text_area :idea_id %>
  </div>
  <div class="field">
    <%= f.label :picture %><br>
    <%= f.file_field :picture %>
  </div>
  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>
